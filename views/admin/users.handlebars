<h1>餐廳後台</h1>

<a href='/admin/users'>
    <button type="button" class="btn btn-outline-info">User</button>
</a>

<a href='/admin/restaurants'>
    <button type="button" class="btn btn-outline-info">Restaurant</button>
</a>

<a href='/admin/restaurants/create'>
    <button type="button" class="btn btn-outline-info">New Restaurant</button>
</a>

<br />
<br />

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST">
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.name}}</td>
                {{#if this.isAdmin}}
                <td>admin</td>
                <td>
                    <button type="submit" class="btn btn-link">設定成使用者</button>
                </td>
                {{else}}
                <td>user</td>
                <td>
                    <button type="submit" class="btn btn-link">設定成管理員</button>
                </td>
                {{/if}}

            </tr>
        </form>
        {{/each}}
    </tbody>
</table>